{% extends 'base.html.twig' %}

{% block title %}Servicio index{% endblock %}

{% block body %}
    <h1>Servicio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Stock</th>
                <th>Precio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for servicio in servicios %}
            <tr>
                <td>{{ servicio.id }}</td>
                <td>{{ servicio.nombre }}</td>
                <td>{{ servicio.descripcion }}</td>
                <td>{{ servicio.stock }}</td>
                <td>{{ servicio.precio }}</td>
                <td>
                    <a href="{{ path('app_servicio_show', {'id': servicio.id}) }}">show</a>
                    <a href="{{ path('app_servicio_edit', {'id': servicio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_servicio_new') }}">Create new</a>
{% endblock %}
