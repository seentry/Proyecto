{% extends 'base.html.twig' %}

{% block title %}Trabajador index{% endblock %}

{% block body %}
    <h1>Trabajador index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Dni</th>
                <th>Email</th>
                <th>Salario</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trabajador in trabajadors %}
            <tr>
                <td>{{ trabajador.id }}</td>
                <td>{{ trabajador.nombre }}</td>
                <td>{{ trabajador.apellidos }}</td>
                <td>{{ trabajador.dni }}</td>
                <td>{{ trabajador.email }}</td>
                <td>{{ trabajador.salario }}</td>
                <td>
                    <a href="{{ path('app_trabajador_show', {'id': trabajador.id}) }}">show</a>
                    <a href="{{ path('app_trabajador_edit', {'id': trabajador.id}) }}">edit</a>
                </td>
            </tr>
